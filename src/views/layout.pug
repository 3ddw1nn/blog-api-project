doctype html
html(lang='en')
head
  title SendMoods Blog
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/stylesheets/style.css')

body(class="bg-slate-900")
  if user
    nav(class="bg-slate-800")
      div(class= "")
        div(class= "flex justify-between h-16 px-10 shadow items-center")
          div(class= "flex items-center space-x-8")
            a(href="/" class= "text-xl text-white lg:text-2xl font-bold cursor-pointer") SendMoods 
          if user.admin_status==false    
            div(class="flex space-x-4 items-center")
              a(href="/join-admin" class="bg-indigo-600 px-4 py-2 rounded text-white hover:bg-indigo-500 text-sm") Join Admin
              a(href="/log-out" class="text-gray-500 hover:text-white text-md") Log Out
              div(class="flex space-x-2 ")
                div(class="text-white font-bold") #{user.username} 
                div(class="text-white font-bold") : 
                div(class="text-indigo-600 font-bold") USER   
          else
            div(class="flex space-x-4 items-center")
              a(href="/create-post" class="hover:text-white text-gray-500") Create Post 
              a(href="/log-out" class="text-gray-500 hover:text-white text-md") Log Out
              div(class="flex space-x-2 ")
                div(class="text-white font-bold") #{user.username} 
                div(class="text-white font-bold") : 
                div(class="text-orange-500 font-bold") ADMIN               
  else
    nav(class="bg-slate-800") 
      div(class= "")
        div(class= "flex justify-between h-16 px-10 shadow items-center")
          div(class= "flex items-center space-x-8")
            a(href="/" class= "text-xl text-white lg:text-2xl font-bold cursor-pointer") SendMoods
            div(class="hidden md:flex justify-around space-x-4")
              a(href="/" class="hover:text-white text-gray-500") Messages
          div(class="flex space-x-4 items-center")
            div(class="flex space-x-2 ")
              div(class="text-white font-bold") You are not logged in 
            a(href="/log-in" class="text-gray-500 text-md") Log In
            a(href="/sign-up" class="bg-indigo-600 px-4 py-2 rounded text-white hover:bg-indigo-500 text-sm") Sign Up
          
block content
