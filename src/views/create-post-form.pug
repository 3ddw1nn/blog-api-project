extends layout

block content
    div(class="m-8")
      div(class="mb-10 flex justify-center")
        form(class="flex flex-col w-3/6" method="POST" action="")
          div(class="mb-6")
            label(class="text-white" for='post_title') Post Title:
            input(type="post_title" name="post_title" id="post_title" placeholder="Enter a post title" class="w-full border border-gray-300 py-2 pl-3 rounded mt-2 outline-none focus:ring-indigo-600 :ring-indigo-600")
          div(class="mb-6")
            label(class="text-white" for='text') Text:
            textarea(class="flex-1 w-full px-4 py-2 text-base text-gray-700 placeholder-gray-400 bg-white border border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" id="text" placeholder="Enter your blog post text" name="text" rows="5" cols="40")
          button(class="cursor-pointer py-2 px-4 block bg-indigo-500 text-white font-bold w-full text-center rounded" type='submit') Post
    div(class="mb-6 flex justify-center")
        if errors
            ul(class="mt-6 flex flex-col justify-center")
                for error in errors
                    li(class="text-white") #{error.msg}