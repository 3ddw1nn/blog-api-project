extends layout

block content
    div(class=" mt-10 text-white text-3xl flex justify-center font-bold")
        h3 #{title}
    div(class="h-screen flex justify-center")
        div(class="py-6 px-8 h-fit mt-20 bg-slate-600 rounded shadow-xl")
            div(class="mt-6 text-white text-l flex flex-col")
                p(class="flex justify-center") An email has been sent. Please click the link in your email and follow the password recovery steps
            div(class="mt-6 flex justify-center m-6")
                a(href="/" class="bg-indigo-600 px-4 py-2 rounded text-white hover:bg-indigo-500 text-sm") Return to Home
